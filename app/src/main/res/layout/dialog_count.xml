<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/conner_white_8dp_top"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cancle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:gravity="center_vertical"
            android:text="取消"
            android:textColor="@color/tv333"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/sure"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_16"
            android:gravity="center_vertical"
            android:text="确定"
            android:textColor="@color/tv333"
            android:textSize="@dimen/sp_16" />


        <com.weigan.loopview.LoopView
            android:id="@+id/loop"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_100"
            app:awv_itemsVisibleCount="5"
            app:awv_centerTextColor="@color/black"
            app:awv_isLoop="true"
            app:awv_initialPosition="0"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/cancle"
            android:layout_marginTop="@dimen/dp_12"
            app:awv_outerTextColor="@color/tv999"
            app:awv_textsize="18"
            android:layout_marginBottom="@dimen/dp_32"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/loop"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_5"
            android:textColor="@color/tv333"
            android:text="份"
            android:gravity="center_vertical"
            android:layout_alignTop="@id/loop"
            android:layout_alignBottom="@id/loop"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>